<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/actionbar"
        layout="@layout/app_bar" />

    <ScrollView
        android:id="@+id/scrollView_my_ac_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_id_my_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            card_view:cardCornerRadius="@dimen/_2sdp"
            card_view:contentPadding="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/layout_my_ac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_personal_details_main_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/my_account_info_page"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_personal_details_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/your_personal_details"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/SplitLine_hor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@color/grey_400" />

                <TextView
                    android:id="@+id/tv_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/first_name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_my_ac_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_edit_pro_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_first_name"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/last_name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_my_ac_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_edit_pro_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_last_name"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/e_mail"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_my_ac_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/e_mail"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_email1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_email1"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_error_email2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_email2"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/telephone"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_my_ac_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/telephone"
                    android:inputType="phone"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_telephone"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

               <!-- <TextView
                    android:id="@+id/tv_fax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/fax"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_my_ac_fax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/fax"
                    android:inputType="number"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_fax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_fax"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />-->

                <LinearLayout

                    android:id="@+id/layout_my_ac_actions"
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_my_ac_back"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="0.5"
                        android:background="@color/grey_500"
                        android:text="@string/back"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_my_ac_continue"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="0.5"
                        android:background="@color/colorPrimary"
                        android:text="@string/_continue"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
