<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="240dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_marginBottom="@dimen/_5sdp"


    android:layout_marginLeft="0dp"
    android:layout_marginRight="20dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"

    android:padding="@dimen/_5sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_4sdp">

    <ImageView
        android:id="@+id/column_image"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="95dp"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/image"
        android:layout_marginLeft="0dp"
        android:padding="@dimen/_12sdp" />

    <TextView
        android:id="@+id/column_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="@dimen/_5sdp"

        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:textColor="@color/text_color"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/column_special_price_sp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:padding="@dimen/_2sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/caption" />

    <TextView
        android:id="@+id/column_special_price_p"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:textColor="@color/red"
        android:textSize="@dimen/body" />

    <TextView
        android:id="@+id/column_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:padding="@dimen/_2sdp"
        android:textColor="@color/add_to_cart"
        android:text="Add to Cart"
        android:textSize="13dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linear_add_to_cart"
        android:background="@color/add_to_cart"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/cart_product_count_add"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/black_transparent_0"

            android:layout_marginTop="0dp"
            android:contentDescription="@string/image"
            android:foregroundGravity="center"
            android:src="@drawable/ic_add_circle_grey_500_24dp" />

        <TextView
            android:id="@+id/cart_product_count"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="-10dp"
            android:gravity="center"
android:text="1"
            android:textStyle="bold"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/body" />

        <ImageButton
            android:id="@+id/cart_product_count_remove"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:layout_weight="1"
            android:background="@color/black_transparent_0"
            android:contentDescription="@string/image"

            android:src="@drawable/ic_remove_circle_grey_500_24dp" />
</LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>