<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.activity.ForgetPassword">





    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary2"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/layout_l_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_forget_pwd_pg_forget_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:paddingEnd="5dp"
                android:paddingLeft="10.00dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:text="Verify Phone No"
                android:textColor="@color/white"
                android:textSize="@dimen/title"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_forget_pwd_get_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_show_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:gravity="start"
                    android:padding="4dp"
                    android:text="@string/sentence_for_get_email"
                    android:textSize="@dimen/sub_heading" />

                <TextView
                    android:id="@+id/tv_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Enter Your OTP here"
                    android:textSize="@dimen/sub_heading" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"


                    android:hint="Enter Phone No."
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColorHint="@color/grey_500"
                    android:textSize="@dimen/body"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et_new_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"


                    android:hint="Enter Code"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColorHint="@color/grey_500"
                    android:textSize="@dimen/body"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <Button
                android:id="@+id/btn_submit"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"

                android:gravity="center"
                android:text="Submit Phone No"
                android:textColor="@color/white"
                android:textSize="@dimen/body" />


            <Button
                android:id="@+id/btn_code"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"

                android:gravity="center"
                android:text="Submit Code"
                android:textColor="@color/white"
                android:textSize="@dimen/body" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>