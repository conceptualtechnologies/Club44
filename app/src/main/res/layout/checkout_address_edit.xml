<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView_adds_book_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_id_adds_book_editor_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            card_view:cardCornerRadius="@dimen/_2sdp"
            card_view:contentPadding="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/layout_adds_book_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_edit_pro_main_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/shipping_address"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_edit_pro_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/your_personal_details"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/SplitLine_hor1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@color/grey_400" />

                <TextView
                    android:id="@+id/tv_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/first_name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_edit_pro_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_edit_pro_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_first_name"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/last_name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_edit_pro_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_edit_pro_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_last_name"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/company"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_edit_pro_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/company"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/tv_address"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_edit_pro_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/address_1"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_edit_pro_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_address1"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/city"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_edit_pro_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/city"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_edit_pro_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_city"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_postcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/post_code"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/et_edit_pro_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_modified_text_state"
                    android:hint="@string/post_code"
                    android:inputType="number"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_edit_pro_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_postcode"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/country"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner_edit_pro_country"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@drawable/spinner_background"
                    android:padding="@dimen/_8sdp"
                    android:spinnerMode="dialog"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_edit_pro_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_country"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_region_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                    android:drawableRight="@drawable/ic_action_grade_red_10dp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/region_or_state"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner_edit_pro_region_or_state"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@drawable/spinner_background"
                    android:padding="@dimen/_8sdp"
                    android:spinnerMode="dialog"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_error_edit_pro_region_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reg_error_region_state"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_edit_pro_actions"
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_edit_pro_back"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/myshape"
                        android:text="@string/back"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_edit_pro_continue"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/mybutton"
                        android:text="@string/_continue"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>

