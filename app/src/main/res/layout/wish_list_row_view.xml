<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/_4sdp">

    <ImageView
        android:id="@+id/wish_list_product_image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:contentDescription="@string/image"
        android:src="@color/colorPrimary"
        android:background="@color/abc_search_url_text_normal"
        android:baselineAlignBottom="false" />

    <LinearLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wish_list_product_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/_4sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/body" />

        <TextView
            android:id="@+id/wish_list_product_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:padding="@dimen/_4sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/body" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/wish_list_product_remove"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black_transparent_0"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_clear_grey_500_24dp" />

</LinearLayout>
