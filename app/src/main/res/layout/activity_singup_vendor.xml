<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.SingupVendor">


    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary2"
        android:padding="1dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="382dp"
                android:layout_height="40dp"
                android:text="''Vendor SignUp Here''"
android:layout_gravity="center"
                android:id="@+id/textView2"
                android:textColor="@color/white"
                android:layout_marginEnd="-100dp"
                android:layout_marginTop="80dp"
                android:textSize="17dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"

                android:id="@+id/et_vendor_name"
                android:hint="  Vendor Name''"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:drawableLeft="@drawable/name1"
                android:background="@drawable/rounded_border_edittext"
                android:textSize="15dp"
                android:layout_weight="0.15"
                android:layout_gravity="center" />





            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:id="@+id/et_email"
                android:hint=" Email''"
                android:textSize="15dp"
                android:drawableLeft="@drawable/email2"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/rounded_border_edittext"/>



            <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:id="@+id/et_pass"
                android:ems="10"
            android:hint="Password''"
                android:textSize="15dp"
                android:inputType="textPassword"
            android:drawableLeft="@drawable/password1"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="#f5fefcfc"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:id="@+id/et_mobile"
                android:hint="  Mobile''"
                android:textSize="15dp"
                android:drawableLeft="@drawable/mobile1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/rounded_border_edittext"/>




            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:id="@+id/et_address"
                android:hint="  Address''"
                android:textSize="15dp"
                android:drawableLeft="@drawable/address1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/rounded_border_edittext"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:id="@+id/et_adhar"
                android:hint="  Adhar Number''"
                android:textSize="15dp"
                android:drawableLeft="@drawable/name1"
                android:layout_marginTop="20dp"

                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/rounded_border_edittext"/>


            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/checkbox"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                android:checked="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:text="I agree to the Terms and Condition"
                android:id="@+id/error_adhar"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal" />



            <Button
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:layout_marginTop="35dp"
                android:background="@color/colorPrimary3"
                android:id="@+id/btn_submit1"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
               />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
