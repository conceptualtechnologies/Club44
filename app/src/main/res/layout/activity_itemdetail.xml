<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.Itemdetail">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" Item Detail"
                android:textColor="@color/white"

                android:textSize="20dp"
                />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:id="@+id/tv_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Item Available*"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <Spinner
                    android:id="@+id/spinner5"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:gravity="left|center_vertical" />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/tv_break_fast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Break Fast*"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
                <Spinner
                    android:id="@+id/spinner6"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:gravity="left|center_vertical" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/tv_south_indian"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_height="wrap_content"
                    android:text="South Indian/chinees*"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <Spinner
                    android:id="@+id/spinner7"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:gravity="left|center_vertical" />
            </TableRow>


            <TextView
                android:id="@+id/tv_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Services Area Covered*"
                android:textColor="@color/black"/>
            <Spinner
                android:id="@+id/spinner8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="left|center_vertical" />



            <Button
                android:id="@+id/btn_submit_itemdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                android:background="@drawable/mybutton"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/body" />


        </TableLayout>


    </LinearLayout>




</RelativeLayout>
