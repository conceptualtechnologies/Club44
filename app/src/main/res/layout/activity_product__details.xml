<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.restaurent.activity.product.Product_Details">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_60sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:showDividers="middle">


                <ImageButton
                    android:id="@+id/product_detail_add_to_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@color/white"
                    android:contentDescription="@string/image"
                    android:src="@drawable/ic_favorite_border_grey_500_24dp" />


                <ImageView
                    android:id="@+id/product_detail_image_view_parent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/white"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/image"
                    android:padding="@dimen/_5sdp" />


                <LinearLayout
                    android:id="@+id/product_detail_child_image_Linear_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_1sdp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/product_detail_image_view_child1"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:contentDescription="@string/image" />

                    <ImageView
                        android:id="@+id/product_detail_image_view_child2"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:contentDescription="@string/image" />

                    <ImageView
                        android:id="@+id/product_detail_image_view_child3"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:contentDescription="@string/image" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/product_detail_image_view_child4"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:contentDescription="@string/image" />

                        <TextView
                            android:id="@+id/product_detail_text_view_on_child_four"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_gravity="center"
                            android:background="@color/transparent_text"
                            android:gravity="center"
                            android:textColor="@color/white" />
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/grey_300" />

                <TextView
                    android:id="@+id/product_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:background="@color/white"
                    android:padding="@dimen/_4sdp"

                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sub_heading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/product_detail_special_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sub_heading" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/grey_300" />

                <LinearLayout
                    android:id="@+id/rating_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/product_detail_rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5" />

                    <TextView
                        android:id="@+id/product_detail_no_of_rating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/body" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical">
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:id="@+id/etcheckpin"
                        android:background="@drawable/rounded_border_edittext"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/body"
                        android:layout_gravity="center" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check Pin Code"
                        android:id="@+id/btncheckpin"
                        android:layout_gravity="right|center_vertical" />


                </LinearLayout>
                <TextView
                    android:id="@+id/product_description_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/text_color"
                    android:text="@string/description"
                    android:textSize="@dimen/body" />
                <TextView
                    android:id="@+id/pincoderesponse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/body" />
                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/body" />

                <TextView
                    android:id="@+id/product_detail_write_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/write_rating"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/body" />

                <!--android:drawableEnd="@drawable/ic_mode_edit_grey_500_18dp"
                    android:drawablePadding="@dimen/_2sdp"
                    android:drawableRight="@drawable/ic_mode_edit_grey_500_18dp"
                    -->

                <View
                    android:id="@+id/spliteliner_product_price_review"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/grey_300" />


                <LinearLayout
                    android:id="@+id/product_detail_review_post_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_detail_quantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/quantity"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/body" />

                    <Spinner
                        android:id="@+id/product_detail_quantity_valueT"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent2"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>

                </LinearLayout>

                <View
                    android:id="@+id/spliteliner_product_specification_abow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@color/grey_300" />

                <TextView
                    android:id="@+id/product_detail_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
                    android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                    android:gravity="start|center"
                    android:paddingEnd="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/specification"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/body" />
                <View
                    android:id="@+id/splite_liner_product_specification_below"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@color/grey_300" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/product_detail_first_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:background="@color/white">

                </android.support.v7.widget.RecyclerView>



            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/product_detail_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent2"
            android:drawableLeft="@drawable/ic_shopping_cart_white_24dp"
            android:drawablePadding="@dimen/_minus60sdp"
            android:drawableStart="@drawable/ic_shopping_cart_white_24dp"
            android:paddingEnd="0dp"
            android:paddingLeft="@dimen/_90sdp"
            android:paddingRight="0dp"
            android:paddingStart="@dimen/_90sdp"
            android:textSize="@dimen/sub_heading"
            android:text="@string/add_to_cart"
            android:textColor="@color/white"/>
    </FrameLayout>
</LinearLayout>

