<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/_16sdp"
    android:paddingTop="@dimen/_16sdp"
    card_view:cardCornerRadius="@dimen/_4sdp"
    card_view:cardElevation="@dimen/_8sdp"
    card_view:contentPadding="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/layout_l_my_ac_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_14sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingTop="@dimen/_20sdp"
            android:text="@string/my_account_detail"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/horizon_rule"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:background="@color/grey_500" />

        <TextView
            android:id="@+id/tv_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableEnd="@drawable/ic_stat_hardware_keyboard_arrow_right"
            android:drawableRight="@drawable/ic_stat_hardware_keyboard_arrow_right"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingTop="@dimen/_12sdp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_text_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_stat_hardware_keyboard_arrow_right"
            android:drawableRight="@drawable/ic_stat_hardware_keyboard_arrow_right"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingTop="@dimen/_4sdp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_text_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_stat_hardware_keyboard_arrow_right"
            android:drawableRight="@drawable/ic_stat_hardware_keyboard_arrow_right"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingTop="@dimen/_4sdp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_text_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_stat_hardware_keyboard_arrow_right"
            android:drawableRight="@drawable/ic_stat_hardware_keyboard_arrow_right"
            android:paddingBottom="@dimen/_16sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingTop="@dimen/_4sdp"
            android:textSize="14sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>