<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:background="@color/white"
        android:orientation="vertical">

       <!-- <TextView
            android:id="@+id/txtview_review_row_no_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:background="@color/white"
            android:gravity="start|center"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/text_size_14sp"
            android:text="@string/there_is_no_review_for_this_product"
            android:visibility="gone"/>
-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_detail_and_description_review_name"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_6sdp"
                android:textSize="@dimen/sub_heading" />

            <RatingBar
                android:id="@+id/product_detail_and_description_review_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start"
                android:numStars="5" />


        </LinearLayout>

        <TextView
            android:id="@+id/product_detail_and_description_review_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/white"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textSize="@dimen/body" />
    </LinearLayout>
</android.support.v7.widget.CardView>
