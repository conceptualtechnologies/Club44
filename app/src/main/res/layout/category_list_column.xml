<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginStart="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_2sdp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"
    android:padding="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="0dp"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/white"
            android:contentDescription="@string/image"
            android:padding="@dimen/_20sdp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/category_wishList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginStart="@dimen/_120sdp"
                android:background="@color/white_transparent"
                android:contentDescription="@string/image"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_favorite_border_grey_500_24dp" />

            <TextView
                android:id="@+id/category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/white"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sub_heading" />

            <TextView
                android:id="@+id/category_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/white"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/category_special_price_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/category_special_price_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/body" />
            <TextView
                android:id="@+id/column_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/add_to_cart"
                android:text="Add to Cart"
                android:textSize="@dimen/body" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_add_to_cart"
                android:background="@color/add_to_cart"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/cart_product_count_add"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/black_transparent_0"

                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/image"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_add_circle_grey_500_24dp" />

                <TextView
                    android:id="@+id/cart_product_count"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="-10dp"
                    android:gravity="center"
                    android:text="1"
                    android:textStyle="bold"
                    android:padding="@dimen/_1sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body" />

                <ImageButton
                    android:id="@+id/cart_product_count_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"

                    android:layout_weight="1"
                    android:background="@color/black_transparent_0"
                    android:contentDescription="@string/image"

                    android:src="@drawable/ic_remove_circle_grey_500_24dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
