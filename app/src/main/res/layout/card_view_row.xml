<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:contentPadding="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/layoutLin_card_view_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/layoutLin_card_view_adds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layoutRel_first_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_card_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_3sdp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_card_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_card_first_name"
                        android:layout_toRightOf="@+id/tv_card_first_name"
                        android:padding="@dimen/_3sdp"
                        android:textSize="14sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_card_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_card_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:id="@+id/layoutRel_city_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_card_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_1sdp"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_card_post_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_card_city"
                        android:layout_toRightOf="@+id/tv_card_city"
                        android:padding="@dimen/_1sdp"
                        android:textSize="10sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_card_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_card_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutLin_card_view_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                style="?android:attr/buttonBarStyle"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/img_btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:background="@drawable/new_btn_bg"
                    android:drawableLeft="@drawable/ic_mode_edit_grey_500_18dp"
                    android:drawableStart="@drawable/ic_mode_edit_grey_500_18dp"
                    android:padding="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_7sdp"
                    android:paddingStart="@dimen/_7sdp"
                    android:text="@string/edit"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/grey_500"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/img_btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:background="@drawable/new_btn_bg"
                    android:drawableLeft="@drawable/ic_action_delete_grey_500_18dp"
                    android:drawableStart="@drawable/ic_action_delete_grey_500_18dp"
                    android:padding="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_7sdp"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/delete"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/grey_500"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>