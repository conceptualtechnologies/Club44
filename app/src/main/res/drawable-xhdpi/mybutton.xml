<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
   <shape android:shape = "rectangle">
   <corners android:radius= "8dip"/>
   <stroke android:width= "4dip" android:color= "#f562c7c7" />
   <gradient android:angle= "-90" android:startColor= "#f562c7c7" android:endColor= "#f562c7c7"/>
   </shape>
   </item>
   <item android:state_focused= "true">
   <shape android:shape = "rectangle">
   <corners android:radius= "8dip"/>
   <stroke android:width= "4dip" android:color= "#f562c7c7" />
   <solid android:color= "#effaf4f7"/>
   </shape>
   </item>
   <item>
    <shape android:shape = "rectangle">
   <corners android:radius= "8dip"/>
   <stroke android:width= "4dip" android:color= "#f562c7c7" />
   <gradient android:angle= "-90" android:startColor= "#f562c7c7" android:endColor= "#f562c7c7"/>
</shape>
</item>
</selector>